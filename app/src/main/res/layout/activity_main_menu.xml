<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainMenu"
    android:background="#CD853F">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baza przepisów"
        android:id="@+id/buttonBase"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:padding="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stwórz listę zakupów"
        android:id="@+id/buttonCreate"
        android:layout_below="@+id/buttonBase"
        android:layout_centerHorizontal="true"
        android:padding="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stwórz listę zakupów"
        android:id="@+id/buttonNewRec"
        android:layout_below="@+id/buttonCreate"
        android:layout_centerHorizontal="true"
        android:padding="10dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imageView"
        android:layout_above="@+id/buttonBase"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:maxHeight="300dp"
        android:maxWidth="300dp"
        android:scaleType="fitCenter"
        android:padding="10dp" />
</RelativeLayout>
