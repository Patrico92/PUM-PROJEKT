<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.patryk.pum_projekt.ShoppingList"
    android:background="#CD853F">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuń listę zakupów"
        android:id="@+id/deleteShoppingListButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemName"
        android:layout_below="@+id/deleteShoppingListButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dodaj do listy zakupów"
        android:id="@+id/addItemButton"
        android:layout_below="@+id/itemName"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ShoppingItemList"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Aby usunać element z listy zakupów przytrzymaj go dłużej na liście."
        android:id="@+id/textView"
        android:layout_below="@+id/addItemButton"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:padding="5dp" />
</RelativeLayout>
